<div class=" container my-2 ">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6">
      <h1 class="row justify-content-center" >Booking</h1>
      <div class="card">
      <h2 class="card-header"><b><%= @game.title %></b></h2>
        <div class="card-body">
          <h5 class="card-title"><b>Description</b></h5>
          <p class="card-text"><%= @game.description.capitalize %></p>
          <div class="row">
            <h5><b> Date of booking </b></h5>
              <%= simple_form_for [@game, @booking] do |f| %>
                <%= f.input :start_date,
                            as: :date,
                            input_html: { autocomplete: "Start date" }%>
                <%= f.input :end_date,
                            as: :date,
                            input_html: { autocomplete: "End date" }%>
                <%= link_to "Return game", game_path(@game), class:"btn btn-outline-primary"  %>
                <%= f.submit class:"btn btn-primary" %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

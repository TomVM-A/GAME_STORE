<div class="mt-4">
  <div class="row gy-3">
    <% @category.games.each do |game|%>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <%= link_to game_path(game), class: "car-link" do%>
          <%= render "shared/card_games", game: game%>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

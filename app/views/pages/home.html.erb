<div class="mt-4">
  <div class="row gy-3">
    <h2 class = "text-center">Categories</h2>
    <% @categories.each do |category|%>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <%= link_to category_path(category), class: "car-link" do%>
          <%= render "shared/card_category", category: category%>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

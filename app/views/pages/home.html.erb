<div class="banner">
  <div class="container">
    <h1>Game shop. Get ready for a new challenge!</h1>
    <p>
      More than a game, it's an adventure for life!.
    </p>
    <%= link_to "Get it now!", games_path %>
  </div>
</div>
<!-- code a "How it works" section -->
<div class="container">
  <div class="mt-4">
    <div class="row gy-3">
      <% @categories.each do |category|%>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <%= link_to category_path(category), class: "car-link" do%>
            <%= render "shared/card_category", category: category%>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
